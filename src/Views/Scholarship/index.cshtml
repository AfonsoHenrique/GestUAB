@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de bolsas";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>

}     
<table class='table'>
  <thead>
    <td>Total Professores</td>
    <td>Tutor a Distancia</td>
    <td>Tutor Presencial</td>
    <td>Professor Pesquisador I</td>
    <td>Professor Pesquisador II</td>
    <td>Coordenador de Curso I</td>
    <td>Coordenador de Curso II</td>
    <td>Coordenador de Tutoria I</td>
    <td>Coordenador de Tutoria II</td>  
  
    </thead>
  <tbody>
        <tr> 
            <td>@Model.Count</td>  
        </tr>
    
  </tbody>
</table>   

<table class='table'>
  <thead>
    <td>CPF</td>
    <td>Nome</td>
    <td>Fun√ßao</td>
    <td>Lote</td>
    <td>Estado</td>
    <td>Valor</td>
    </thead>
  <tbody>
    @foreach(var scholarship in @Model) {
        <tr> 
            <td>@scholarship.CPF</td>  
            <td>@scholarship.Name</td>  
            <td>@scholarship.Function</td>  
            <td>@scholarship.Lots</td>
            <td>@scholarship.State</td>
            <td>@scholarship.Value</td>      
            <!--
            <td>   
                <a href='@Url.Content("~/scholarships/" + scholarship.Id)' class='btn'>
                  Exibir
                </a> 
   
            </td>-->
        </tr>
    }
  </tbody>
</table>



<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/scholarship/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


