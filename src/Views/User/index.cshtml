@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de usuários";
}
        
<table class='table'>
  <thead>
    <td>Login</td>
    <td>Nome</td>
    <td>Ações</td>
  </thead>
  <tbody>
    @foreach(var user in @Model) {
        <tr>
            <td>@user.Username</td> 
            <td>@user.Name</td> 
            <td>   
                <a href='@Url.Content("~/user/" + user.Username)' class='btn'>
                  Exibir
                </a> 
                <a href='@Url.Content("~/users/update/" + user.Username)' class='btn btn-info'>
                  <i class="icon-edit"></i>
                  Editar
                </a>
                <a href='@Url.Content("~/users/delete/" + user.Username)' class='btn btn-danger'>
                  <i class="icon-remove"></i>
                  Remover
                </a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/users/create")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>

